<p id="notice"><%= notice %></p>

<h1>Fotos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fotos.each do |foto| %>
      <tr>
        <td><%= foto.nome %></td>
        <td><%= image_tag foto.image_url(:thumb).to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> <%= link_to 'Nova foto', [:new, @imageable, :foto] %> </p>
