<p id="notice"><%= notice %></p>

<h1>Pts</h1>

<table>
  <thead>
    <tr>
      <th>Ci pt</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pts.each do |pt| %>
      <tr>
        <td><%= pt.ci_pt %></td>
        <td><%= pt.tipo %></td>
        <td><%= link_to 'Show', pt %></td>
        <td><%= link_to 'Edit', edit_pt_path(pt) %></td>
        <td><%= link_to 'Destroy', pt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

